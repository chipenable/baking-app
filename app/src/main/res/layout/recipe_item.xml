<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:foreground="@drawable/recycler_item_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_cake"
            android:scaleType="center"
            android:id="@+id/recipe_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/light_grey"/>

        <TextView
            tools:text="Nutella Pie"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/recipe_image"
            android:layout_toEndOf="@+id/recipe_image"
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="24sp"/>

        <TextView
            android:text="@string/servings"
            android:id="@+id/servings"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:layout_toRightOf="@+id/recipe_image"
            android:layout_toEndOf="@+id/recipe_image"
            android:layout_below="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/servings_value"
            android:text="8"
            android:layout_toRightOf="@+id/servings"
            android:layout_toEndOf="@+id/servings"
            android:layout_alignBaseline="@+id/servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView

            android:padding="4dp"
            android:scaleType="centerCrop"
            android:layout_height="32dp"
            android:layout_width="32dp"/>

    </RelativeLayout>

</FrameLayout>